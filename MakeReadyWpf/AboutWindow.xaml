<Window x:Class="MakeReadyWpf.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeReadyWpf"
        mc:Ignorable="d"
        Title="About MakeReady Excel Addin"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="450" Width="600">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="DarkOliveGreen" Offset="-0.2"/>
            <GradientStop Color="LightYellow" Offset="1.2"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="8">
        <TextBlock Text="{Binding ProductVersion, Mode=OneWay}" HorizontalAlignment="Center" FontSize="18"/>
        <TextBlock Text="Nothing here so far ..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontFamily="Comic Sans MS" Foreground="DarkBlue"/>
    </Grid>
</Window>
